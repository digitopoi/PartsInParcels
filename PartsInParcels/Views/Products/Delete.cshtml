@model PartsInParcels.Models.Product

@{
    ViewBag.Title = "Delete";
}


<h4>Are you sure you want to delete this?</h4>
<div>
    <hr />
    
    <ul class="collection col s12">

        <li class="collection-item" style="font-size: 1.5em">
            <strong>@Html.DisplayFor(model => model.Name)</strong>
        </li>


        <li class="collection-item">
            @Html.DisplayFor(model => model.Price)
        </li>


        <li class="collection-item">
            @Html.DisplayFor(model => model.Stock)
        </li>


        <li class="collection-item">
            @Html.DisplayFor(model => model.Grade)
        </li>

        <li class="collection-item">
            @Html.DisplayFor(model => model.Cured)
        </li>


        <li class="collection-item">
            @Html.DisplayFor(model => model.Origin)
        </li>

        <li class="collection-item">
            @Html.DisplayFor(model => model.Description)
        </li>

    </ul>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col s6 offset-2">
                <button class="btn waves-effect waves-light red darken-4" type="submit" name="action">Delete<i class="material-icons right">delete_forever</i></button>
            </div>
        </div>
        @*<div class="form-actions no-color">
