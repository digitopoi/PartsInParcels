@model IEnumerable<PartsInParcels.Models.Product>

@{
    ViewBag.Title = "Index";
}


    <h4>Products:</h4>
    <div class="section">
        @{ 
            int itemCount = 0;
        }

        @while (itemCount <= 4)
        {
            foreach (var item in Model)
            {
                if (itemCount % 2 == 0)
                {
                    @:<div class="row">
                }

                <div class="col s12 m6">
                    <div class="card small">
                        <div class="card-image">
                            <img class="responsive-img" src="@Html.DisplayFor(modelItem => item.Image)" />
                            <span class="card-title">@Html.DisplayFor(modelItem => item.Name)</span>
                        </div>
                        <div class="card-content">
                            <p>@Html.DisplayFor(modelItem => item.Description)</p>
                        </div>
                        <div class="card-action">
                            @Html.ActionLink("Details", "Details", new { id = item.ProductID })
                            <!-- TODO: ADD ACTION LINK-->
                            <a class="right" href="#"><i class="material-icons right">add_shopping_cart</i>Add to Cart</a>
                        </div>
                    </div>
                </div>

                itemCount++;

                if ((itemCount % 2) == 0)
                {
                    @:</div>
                }
            }
        }
    </div>
